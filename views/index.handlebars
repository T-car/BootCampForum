<div class="row wow fadeIn">
    <!-- Bottom Row Begins -->

    <!-- Thread Create Begins -->
    <div class="col-md-12 mb-5">
        <div class="card">
            <h5 class="card-header h5">Create Thread</h5>
            <div class="card-body">
                <h5 class="card-title">Thread Author (Guest)</h5>

                <form id="post_forum">
                    <div class="form-group shadow-textarea">
                        <i class="fas fa-user prefix"></i>
                        <label for="CHANGE_THIS">Thread Title</label>
                        <input type="text" id="post_title" class="form-control">

                        <i class="fas fa-user prefix pt-1"></i>
                        <label for="CHANGE_THIS">Thread Category</label>
                        <!-- <input type="text" id="post_category" class="form-control"> -->
                        <select class="custom-select" id="post_category"></select>

                        <i class="fas fa-users prefix pt-1"></i>
                        <label for="CHANGE_THIS">Thread Body</label>
                        <textarea class="form-control z-depth-1" id="post_body" rows="3"
                            placeholder="Write something here..."></textarea>

                    </div>
                    <button type="submit" class="btn btn-primary">Submit Thread</button>
           
            </div>
             </form>
        </div>
    </div>

    <!-- Thread Create Ends -->

    <!-- Modal Login (OFFSCREEN) Begins -->
    <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content card-image" style="background: url(img/modal.jpg)">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 white-text font-weight-bold">Sign in</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <div class="md-form mb-5">
                        <i class="fas fa-envelope prefix white-text"></i>
                        <input type="email" id="defaultForm-email" class="form-control validate white-text">
                        <label data-error="wrong" data-success="right" for="defaultForm-email">Your
                            email</label>
                    </div>

                    <div class="md-form mb-4">
                        <i class="fas fa-lock prefix white-text"></i>
                        <input type="password" id="defaultForm-pass" class="form-control validate white-text">
                        <label data-error="wrong" data-success="right" for="defaultForm-pass">Your
                            password</label>
                    </div>

                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-default">Login</button>
                </div>
            </div>
        </div>
    </div>
